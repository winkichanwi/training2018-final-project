# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

# JSON API
# User CRUD
GET         /api/users              controllers.UserController.list
POST        /api/users              controllers.UserController.create
DELETE      /api/users/:userId      controllers.UserController.remove(userId: Int)

# User authentication
POST        /api/users/authentication   controllers.LoginController.authenticate

# Shopping centers
GET         /api/shopping-centers   controllers.ShoppingCenterController.list

